@model Note

@{
    ViewData["Title"] = "Note Detail Page";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="NoteDetail" method="post">
    <div class="form-group">
        <label class="note-editor__input-label">Subject</label>
        <input name="title" class="form-control note-editor__subject-input" value="@Model.Title" />
    </div>

    <div class="form-group">
        <label class="note-editor__input-label" >Your Note</label>
        <textarea name="detail" value="@Model.NoteDetail" class="form-control note-editor__detail-input" id="TextArea" rows="12" cols="20"></textarea>
    </div>

    <button class="btn btn-sm note-editor__button" type="submit">Save Note</button>
</form>